    <div class="container">
        {% if status.status == false %}
            <div>
                Ошибка: {{ status.message }}
            </div>

        {% endif %}
        <form action="/auth/signUp" method="post" id="sign_up_form">
            <div class="form-group">
                <label for="exampleInputEmail1">Емаил: </label>
                <input class="form-control" id="exampleInputEmail1" name="email" value="{{ email }}" type="email" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Пароль: </label>
                <input class="form-control" id="exampleInputPassword1" name="password" value="{{ password }}" type="password">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Повторите пароль: </label>
                <input class="form-control" id="exampleInputPassword2" name="passwordRepeat" value="{{ password_repeat }}" type="password">
            </div>
            <button type="button" class="btn btn-dark" onclick="myFunc();">Зарегистрироваться</button>
            <a href="/auth/signIn">Уже зарегистрированы(войти)?</a>
        </form>
    </div>
    <script>
        function myFunc() {
            // alert("ff");
            var pass1 = document.getElementById("exampleInputPassword1");
            var pass2 = document.getElementById("exampleInputPassword2");
            var sign_up_form = document.getElementById("sign_up_form");
            if (pass1.value != pass2.value) {
                alert("Пароли не совпадают!")
            } else if (pass1.value.length < 4) {
                alert("слишком короткий пароль!")
            } else {
                // alert("ffffff");
                sign_up_form.submit();
            }
        }
    </script>
{% endblock %}